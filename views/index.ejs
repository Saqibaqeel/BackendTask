<% layout('layouts/boilerplate') %>
<body>
    <h2>All Listings</h2>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of listings) { %>
        <div class="card col">
            <img src="<%= listing.image %>" class="card-img-top" alt="Vehicle Image" style="height: 20rem;">
            <div class="card-img-overlay"></div>

            <div class="card-body">
                <b><p class="card-text"><%= listing.name %></b></p>
                <p>
                    &#8377;<%= listing.price.toLocaleString('en-IN') %> per day
                </p>
                <b><p class="card-text"><%= listing.quality %></b></p>
            </div>
        </div>
        <% } %>
    </div>
</body>
